<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imgImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/a"
        android:scaleType="fitCenter"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageAvatar"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imgImage"
        android:src="@drawable/a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:text="List speed up"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageAvatar"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/imgImage"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtChannelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vũ Bá Huấn - "
        android:layout_below="@+id/txtTitle"
        android:layout_toEndOf="@+id/imageAvatar"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1T lượt xem - "
        android:layout_below="@+id/txtTitle"
        android:layout_toEndOf="@+id/txtChannelName"/>
    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 giờ trước"
        android:layout_below="@+id/txtTitle"
        android:layout_toEndOf="@+id/txtView"/>

</RelativeLayout>